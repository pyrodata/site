{
	"name": "pyrodata-v3",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"pocketbase:serve": "./pocketbase/pocketbase serve",
		"pocketbase:dev": "pnpm run pocketbase:serve & nodemon --watch pocketbase/pb_migrations --exec \"npx pocketbase-typegen --db ./pocketbase/pb_data/data.db --out ./src/pocketbase.d.ts\"",
		"dev": "vite dev",
		"dev:all": "pnpm run pocketbase:dev & pnpm run dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check ."
	},
	"devDependencies": {
		"@ai-sdk/openai": "^2.0.13",
		"@ai-sdk/svelte": "^3.0.13",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"ai": "^5.0.13",
		"nodemon": "^3.1.10",
		"phosphor-svelte": "^3.0.1",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"turbo": "^2.5.5",
		"typescript": "^5.0.0",
		"vite": "^7.0.4"
	},
	"packageManager": "pnpm@10.6.5",
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"dependencies": {
		"@platejs/basic-nodes": "^49.0.0",
		"@tailwindcss/typography": "^0.5.16",
		"@tinymce/tinymce-svelte": "^3.2.0",
		"@tiptap/core": "^3.2.0",
		"@tiptap/pm": "^3.2.0",
		"@tiptap/starter-kit": "^3.2.0",
		"bits-ui": "^2.9.2",
		"clsx": "^2.1.1",
		"date-fns": "^4.1.0",
		"formsnap": "^2.0.1",
		"hugerte": "^1.0.9",
		"neverthrow": "^8.2.0",
		"platejs": "^49.2.12",
		"pocketbase": "^0.26.2",
		"runed": "^0.31.1",
		"slugify": "^1.6.6",
		"sveltekit-superforms": "^2.27.1",
		"tailwind-merge": "^3.3.1",
		"zod": "3.25.76"
	}
}
